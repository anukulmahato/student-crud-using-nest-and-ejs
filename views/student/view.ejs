<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Details - <%= student.name %></title>
    <!-- ALL CSS FILES  -->
    <link rel="stylesheet" href="/public/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/public/assets/css/style.css" />
    <link rel="stylesheet" href="/public/assets/css/responsive.css" />
    <style>
      .student-card {
        max-width: 600px;
        margin: 50px auto;
      }
      .student-photo-large {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      }
      .info-row {
        padding: 15px;
        border-bottom: 1px solid #eee;
      }
      .info-label {
        font-weight: bold;
        color: #555;
        min-width: 120px;
        display: inline-block;
      }
      .info-value {
        color: #333;
      }
      .status-badge {
        display: inline-block;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 14px;
      }
      .status-active {
        background-color: #28a745;
        color: white;
      }
      .status-inactive {
        background-color: #dc3545;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="student-card">
        <div class="card shadow">
          <div class="card-header bg-primary text-white">
            <h3 class="mb-0 d-flex justify-content-between align-items-center">
              <span>Student Details</span>
              <a href="/student" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back to List
              </a>
            </h3>
          </div>
          <div class="card-body">
            <!-- Photo Section -->
            <div class="text-center mb-4">
              <img 
                src="<%= student.photo %>" 
                alt="<%= student.name %>" 
                class="student-photo-large"
                onerror="this.src='https://via.placeholder.com/200?text=No+Photo'"
              />
            </div>

            <!-- Student Information -->
            <div class="info-section">
              <div class="info-row">
                <span class="info-label">Name:</span>
                <span class="info-value"><%= student.name %></span>
              </div>

              <div class="info-row">
                <span class="info-label">Email:</span>
                <span class="info-value"><%= student.email %></span>
              </div>

              <div class="info-row">
                <span class="info-label">Cell:</span>
                <span class="info-value"><%= student.cell %></span>
              </div>

              <div class="info-row">
                <span class="info-label">Status:</span>
                <span class="status-badge <%= student.Status ? 'status-active' : 'status-inactive' %>">
                  <%= student.Status ? 'Active' : 'Inactive' %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Created At:</span>
                <span class="info-value">
                  <%= new Date(student.createdAt).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Updated At:</span>
                <span class="info-value">
                  <%= new Date(student.updatedAt).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                </span>
              </div>

              <div class="info-row">
                <span class="info-label">Student ID:</span>
                <span class="info-value" style="font-family: monospace; font-size: 12px;">
                  <%= student.id %>
                </span>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4 text-center">
              <a href="/student/edit/<%= student.id %>" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Student
              </a>
              <a 
                href="/student/delete/<%= student.id %>" 
                class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete <%= student.name %>?')"
              >
                <i class="bi bi-trash"></i> Delete Student
              </a>
              <a href="/student" class="btn btn-secondary">
                <i class="bi bi-list"></i> All Students
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JS FILES  -->
    <script src="/public/assets/js/jquery-3.4.1.min.js"></script>
    <script src="/public/assets/js/popper.min.js"></script>
    <script src="/public/assets/js/bootstrap.min.js"></script>
    <script src="/public/assets/js/custom.js"></script>
  </body>
</html>