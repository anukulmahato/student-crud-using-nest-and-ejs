<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Student - <%= student.name %></title>
    <!-- ALL CSS FILES  -->
    <link
      rel="stylesheet"
      href="/public/assets/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="/public/assets/css/style.css"
    />
    <link
      rel="stylesheet"
      href="/public/assets/css/responsive.css"
    />
    <style>
      .current-photo {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body>
    <div class="wrap shadow">
      <div class="card">
        <div class="card-body">
          <h2 class="d-flex justify-content-between">
            Edit Student <a href="/student">Back</a>
          </h2>

          <% if(message) { %>
            <div class="alert alert-success"><%= message %></div>
          <% } %>

          <form action="/student/update/<%= student.id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name</label>
              <input 
                class="form-control" 
                name="name" 
                type="text" 
                value="<%= student.name %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input 
                class="form-control" 
                name="email" 
                type="email" 
                value="<%= student.email %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="cell">Cell</label>
              <input 
                class="form-control" 
                name="cell" 
                type="text" 
                value="<%= student.cell %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="photo">Photo</label>
              <% if(student.photo) { %>
                <div>
                  <p>Current Photo:</p>
                  <img 
                    src="<%= student.photo %>" 
                    alt="<%= student.name %>" 
                    class="current-photo"
                  />
                </div>
              <% } %>
              <input 
                class="form-control" 
                name="photo" 
                type="file"
                accept="image/*"
              />
              <small class="form-text text-muted">Leave empty to keep current photo</small>
            </div>

            <div class="form-group">
              <input class="btn btn-primary" type="submit" value="Update Student" />
              <a href="/student" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- JS FILES  -->
    <script src="/public/assets/js/jquery-3.4.1.min.js"></script>
    <script src="/public/assets/js/popper.min.js"></script>
    <script src="/public/assets/js/bootstrap.min.js"></script>
    <script src="/public/assets/js/custom.js"></script>
  </body>
</html>